<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/DataTables-1.9.1/media/css/demo_table.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script type="text/javascript">$(document).ready(function () { $('#dispatcherIndexTable').dataTable(); });</script>
</head>
<body>
    <div class="wrapper banner">
        <div class="content contentWidth">
            <div id="header">
                <img class="logo" src="@Url.Content("~/Content/images/logo2.png")" width="397" height="139" alt="">
                <div id="topnav">
                    <div class="floatRight" id="loginMessage">
                        @Html.Partial("_LogOnPartial")
                    </div>
                    <div class="floatRight">
                        <ul>
                            @if (Request.IsAuthenticated)
                            {
                                if (Mayhem.Logic.Provider.UserIsDeveloper(User.Identity.Name)
                                    || Mayhem.Logic.Provider.UserIsAdministrator(User.Identity.Name))
                                {
                                    <li>@Html.ActionLink("Dispatchers", "Index", "Dispatcher")</li>
                                    <li>@Html.ActionLink("Shifts", "Index", "Shift")</li>
                                    <li>@Html.ActionLink("Channels", "Index", "Channel")</li>
                                }
                                <li>@Html.ActionLink("Evaluations", "Index", "Incident")</li>
                            }
                            @if (Request.IsAuthenticated)
                            {
                                if (Mayhem.Logic.Provider.UserIsDeveloper(User.Identity.Name)
                                    || Mayhem.Logic.Provider.UserIsAdministrator(User.Identity.Name))
                                {
                                <li><a href="#">Reports</a>
                                    <ul>
                                        <li><a href="#">Channel A Compliance Report (Dispatchers)</a></li>
                                        <li><a href="#">Channel A Compliance Report (Evaluators)</a></li>
                                        <li><a href="#">Medical Dispatch Compliance Report (Dispatchers)</a></li>
                                        <li><a href="#">Medical Dispatch Compliance Report (Evaluators)</a></li>
                                    </ul>
                                </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="wrapper">
        <div class="mainContent contentWidth">
            @RenderBody()
        </div>
    </div>
    <div class="wrapper">
        <div class="footer">
            <div class="contentWidth" id="copyright">
                <div class="center">
                    <p>
                        Copyright &copy; 2012 - All Rights Reserved - Piras Software, Inc.</p>
                </div>
                <br class="clear" />
            </div>
        </div>
    </div>
</body>
</html>
