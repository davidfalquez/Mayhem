<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1><b>Piras</b> Quality Assurance</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
            @if (Request.IsAuthenticated)
            {
                if (Mayhem.Logic.Provider.UserIsDeveloper(User.Identity.Name)
                    || Mayhem.Logic.Provider.UserIsAdministrator(User.Identity.Name))
                {
                <li>@Html.ActionLink("Dispatchers", "Index", "Dispatcher")</li>
                <li>@Html.ActionLink("Channels", "Index", "Channel")</li>
                <li>@Html.ActionLink("Shifts", "Index", "Shift")</li>
                }
                <li>@Html.ActionLink("Evaluations", "Index", "Incident")</li>
                if (Mayhem.Logic.Provider.UserIsDeveloper(User.Identity.Name)
                    || Mayhem.Logic.Provider.UserIsAdministrator(User.Identity.Name))
                {
                
                <li>@Html.ActionLink("Reports", "Index", "Report")</li>
                }
            }
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
