@model Mayhem.WebUI.Models.DispatcherViewModel
@{
    ViewBag.Title = "Dispatchers";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "Dispatcher", FormMethod.Post, new { @id = "loginForm" }))
{
    <div class="formBox">
        <h1>
            Edit Dispatcher:</h1>
        <label class="errorLabel">
            <span class="noValidate">Dispatcher</span>
            @Html.TextBoxFor(model => model.DispatcherId, new { @class = "input_text", @readonly = "readonly"})
            @Html.ValidationMessageFor(model => model.DispatcherId)
        </label>
        <label class="errorLabel">
            <span class="noValidate">First Name</span>
            @Html.TextBoxFor(model => model.FirstName, new { @class = "input_text" })
            @Html.ValidationMessageFor(model => model.FirstName)
        </label>
        <label class="errorLabel">
            <span class="noValidate">Last Name</span>
            @Html.TextBoxFor(model => model.LastName, new { @class = "input_text" })
            @Html.ValidationMessageFor(model => model.LastName)
        </label>
        <label>
            <span class="noValidate">Role Type</span>
            @Html.DropDownListFor(model => model.RoleTypeId, Model.RoleTypeDropDown, new { @class = "input_DropDown" })
            @Html.ValidationMessageFor(model => model.RoleTypeId)
        </label>
        <label>
            <input type="submit" class="button" value="Save" />
        </label>
    </div>
    <div>
    @Html.ActionLink("[Back to List]", "Index", null, new { @class = "floatRight buttonText" })
</div>
}
@Html.ValidationSummary(true)

