@model Mayhem.DTO.Shift
@{
    ViewBag.Title = "Shifts";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "Shift", FormMethod.Post, new { @id = "loginForm" }))
{
    <div class="formBox">
        <h1>
        Edit Shift:</h1>
        @Html.HiddenFor(model => model.ShiftId)
        <label class="errorLabel">
        <span class="noValidate">Shift Name</span>
            @Html.TextBoxFor(model => model.ShiftName, new { @class = "input_text" })
            @Html.ValidationMessageFor(model => model.ShiftName)
        </label>
        <label>
        <span class="noValidate">Abbreviation</span>
            @Html.TextBoxFor(model => model.ShiftAbbreviation, new { @class = "input_text" })
            @Html.ValidationMessageFor(model => model.ShiftAbbreviation)
            </label>
        <label>
            <input type="submit" class="button" value="Save" />
        </label>
    </div>
<div>
    @Html.ActionLink("[Back to List]", "Index", null, new { @class = "floatRight buttonText" })
</div>
}
@Html.ValidationSummary(true)