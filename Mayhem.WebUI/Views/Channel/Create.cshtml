@model Mayhem.DTO.Channel

@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Channel", FormMethod.Post, new { @id = "loginForm" }))
{
   <div class="formBox">
   <h1>Create Channel:</h1>
       <label class="errorLabel">
        <span class="noValidate">Name</span>
            @Html.TextBoxFor(model => model.ChannelName, new { @class = "input_text" })
            @Html.ValidationMessageFor(model => model.ChannelName)
        </label>
       
        <label>
            <input type="submit" class="button" value="Create" />
        </label>
        </div>

<div>
    @Html.ActionLink("[Back to List]", "Index", null, new { @class = "floatRight buttonText" })
</div>
}
@Html.ValidationSummary(true)