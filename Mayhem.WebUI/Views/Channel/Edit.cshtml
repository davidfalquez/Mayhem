@model Mayhem.DTO.Channel
@{
    ViewBag.Title = "Channels";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "Channel", FormMethod.Post, new { @id = "loginForm" }))
{
    <div class="formBox">
        <h1>
        Edit Channel:</h1>
        @Html.HiddenFor(model => model.ChannelId)
        <label class="errorLabel">
        <span class="noValidate">Name</span>
            @Html.TextBoxFor(model => model.ChannelName, new { @class = "input_text" })
            @Html.ValidationMessageFor(model => model.ChannelName)
        </label>
        <label>
            <input type="submit" class="button" value="Save" />
        </label>
    </div>
<div>
    @Html.ActionLink("[Back to List]", "Index", null, new { @class = "floatRight buttonText" })
</div>
}
@Html.ValidationSummary(true)